<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/gb_ijin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/user_profile_image_background"
        android:src="@drawable/clipboard"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txt_nama_k"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/gb_ijin"
        android:text="---"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_jam_ijin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/txt_nama_k"
        android:layout_toEndOf="@+id/gb_ijin"
        android:text="---"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txt_termin_ijin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/txt_jam_ijin"
        android:layout_toEndOf="@+id/gb_ijin"
        android:text="---"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_status_ijin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/txt_termin_ijin"
        android:layout_toEndOf="@+id/gb_ijin"
        android:text="---"
        android:textColor="#ff0000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_alasan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/txt_status_ijin"
        android:layout_toEndOf="@+id/gb_ijin"
        android:text="---" />


</RelativeLayout>
