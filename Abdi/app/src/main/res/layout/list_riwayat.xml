<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/gb_klinik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/user_profile_image_background"
        android:src="@drawable/jam"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txt_nama_kary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="13sp"
        android:textStyle="bold"
        android:text="---"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/gb_klinik" />

    <TextView
        android:id="@+id/txt_jam_absen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_nama_kary"
        android:text="---"
        android:textStyle="italic"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/gb_klinik" />

    <TextView
        android:id="@+id/txt_termin_riwayat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="---"
        android:textStyle="bold"
        android:layout_above="@+id/txt_status"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/gb_klinik" />

    <TextView
        android:id="@+id/txt_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="---"
        android:textStyle="bold"
        android:textColor="#ff0000"
        android:layout_alignBottom="@+id/gb_klinik"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/gb_klinik" />


</RelativeLayout>
