<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tambah_lokasi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="50dp"
    android:orientation="vertical"
    tools:context="com.example.ari.proball.tambah_lokasi"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_namalokasi"
            android:hint="Nama Lokasi"
            android:textSize="10sp" />



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_lati"
            android:hint="Latitude"
            android:textSize="10sp" />



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_long"
            android:hint="Longitude"
            android:textSize="10sp" />



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_alamat"
            android:hint="Alamat"
            android:textSize="10sp" />

        <Spinner
            android:id="@+id/spinner_share"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:entries="@array/android_layout_arrays"
            android:layout_alignParentStart="true"
            android:layout_marginTop="38dp" />

        <ImageView
            android:layout_width="189dp"
            android:layout_height="165dp"
            android:src="@drawable/ikon_video"
            android:id="@+id/imageView_tambah" />

        <Button
            android:text="Simpan"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_simpan"
            android:textAlignment="center" />
    </LinearLayout>
    </ScrollView>
</RelativeLayout>

