<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="2"
    android:layout_marginTop="100dp"
    android:background="#f8f9fe"

    android:weightSum="1">


    <LinearLayout
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.44"
        android:layout_marginRight="10dp"
        android:id="@+id/linearLayout">
        // Rumah Makan

        <ImageView
            android:layout_width="178dp"
            android:layout_height="60dp"
            app:srcCompat="@mipmap/makan"
            android:id="@+id/btn_makan" />

        <TextView
            android:text="R. MAKAN"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:id="@+id/textView7"
            android:textStyle="normal|bold"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:textAlignment="center" />
        // Rumah sakit

        <ImageView
            android:layout_width="178dp"
            android:layout_height="70dp"
            app:srcCompat="@mipmap/rumah_sakit"
            android:id="@+id/btn_r_sakit" />

        <TextView
            android:text="R. SAKIT"
            android:layout_width="181dp"
            android:layout_height="50dp"
            android:id="@+id/textView12"
            android:textStyle="normal|bold"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:textAlignment="center" />
        // Obyek wisata

        <ImageView
            android:layout_width="178dp"
            android:layout_height="60dp"
            app:srcCompat="@mipmap/ikon_wisata"
            android:id="@+id/btn_wisata" />

        <TextView
            android:text="WISATA"
            android:layout_width="182dp"
            android:layout_height="50dp"
            android:id="@+id/textView13"
            android:textStyle="normal|bold"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.44"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/linearLayout"
        android:layout_toEndOf="@+id/linearLayout">



        // Pasar dan mall

        <ImageView
            android:layout_width="178dp"
            android:layout_height="60dp"
            app:srcCompat="@mipmap/pasar"
            android:id="@+id/image_passar" />

        <TextView
            android:text="PASAR MALL"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/textView16"
            android:textStyle="normal|bold"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:textAlignment="center" />
        //pendidikan

        <ImageView
            android:layout_width="178dp"
            android:layout_height="68dp"
            app:srcCompat="@mipmap/sekolah"
            android:id="@+id/btn_pendidikan" />

        <TextView
            android:text="PENDIDIKAN"
            android:layout_width="167dp"
            android:layout_height="50dp"
            android:id="@+id/textView17"
            android:textStyle="normal|bold"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:textAlignment="center" />
        //Hotel

        <ImageView
            android:layout_width="178dp"
            android:layout_height="60dp"
            app:srcCompat="@mipmap/hotel"
            android:id="@+id/btn_hotel" />

        <TextView
            android:text="HOTEL"
            android:layout_width="167dp"
            android:layout_height="50dp"
            android:id="@+id/textView18"
            android:textAllCaps="true"
            android:textStyle="normal|bold"
            android:textSize="12sp"
            android:textAlignment="center" />
    </LinearLayout>


</LinearLayout>