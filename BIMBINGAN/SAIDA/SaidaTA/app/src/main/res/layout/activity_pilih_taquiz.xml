<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pilih_taquiz"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ari.saidata.PilihTAQuiz">

    <TextView
        android:text="Selamat Datang!!! "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/txt_welcome"
        android:layout_alignParentEnd="true"
        android:textAlignment="center" />

    <TextView
        android:text="


Pertanyaan yang diatas adalah Persepsi
(Layanan yang Diterima)

Pertanyaan yang dibawah adalah Harapan
(Layanan yang Diharapkan/ Diinginkan)




Keterangan:
1: sangat tidak baik
2: tidak baik
3: cukup baik
4: baik
5: sangat baik "
        android:id="@+id/textView5"
        android:textAlignment="textStart"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/txt_welcome"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />

    <Button
        android:text="Lanjutkan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnlanjutkan"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_welcome"
        android:layout_alignParentStart="true"
        android:id="@+id/txt_npm" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_npm"
        android:layout_alignEnd="@+id/txt_npm"
        android:id="@+id/txt_prodi" />

</RelativeLayout>
