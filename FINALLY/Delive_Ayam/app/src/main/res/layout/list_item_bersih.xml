<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/gb_ayam_bubut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ah_ok"/>

    <TextView
        android:id="@+id/ukuran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/gb_ayam_bubut"
        android:text="None"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/harga"
        android:text="None"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textStyle="bold"
        android:layout_below="@+id/ukuran"
        android:layout_toEndOf="@+id/gb_ayam_bubut" />

    <TextView
        android:id="@+id/stock"
        android:text="None"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textStyle="bold"
        android:layout_below="@+id/harga"
        android:layout_toEndOf="@+id/gb_ayam_bubut" />

    <TextView
        android:id="@+id/id_ayam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gb_ayam_bubut"
        android:text="TextView"
        android:textColor="@android:color/white" />

</RelativeLayout>
