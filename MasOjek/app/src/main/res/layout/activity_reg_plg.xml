<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ari.masojek.Reg_plg">

    <EditText
        android:id="@+id/txtPhone"
        android:hint="Telepon"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtNama"
        android:layout_below="@+id/txtNama"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="phone" />

    <EditText
        android:id="@+id/txtNama"
        android:hint="Nama Lengkap"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtMail"
        android:layout_below="@+id/txtMail"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/masojeksplashapp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/txtMail"
        android:hint="Email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="137dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/txtPass"
        android:hint="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@+id/txtPhone"
        android:layout_alignStart="@+id/txtPhone"
        android:layout_alignEnd="@+id/txtPhone" />

    <Button
        android:id="@+id/btn_regs"
        android:background="#2ecc71"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="Register"
        android:layout_below="@+id/txtPass"
        android:layout_alignStart="@+id/txtPass" />

    <TextView
        android:id="@+id/textView4"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:text="Already have an account? "
        android:layout_alignStart="@+id/btn_regs"
        android:layout_alignEnd="@+id/btn_regs" />

    <TextView
        android:id="@+id/txtLogTo"
        android:textColor="#2ecc71"
        android:layout_marginRight="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignEnd="@+id/textView4"
        android:layout_alignTop="@+id/textView4" />

</RelativeLayout>
